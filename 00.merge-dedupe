#!/bin/bash
set -euxo pipefail
LANGUAGE=$1
TARGET_SHARD=$2
shift 2

declare -a OPTIONS=(
	-b $(( 3 * 1024 * 1024 * 1024 ))
)

if [ "$LANGUAGE" = "en" ]; then
	OPTIONS+=(
		-c source.gz url.gz
		-d plain_text.gz sentences.gz
		-u sentences.gz
	)
else
	OPTIONS+=(
		-c source.gz url.gz
		-d plain_text.gz sentences.gz sentences_en.gz
		-u sentences.gz
	)
fi

SHARD_DIRS=$(find "$@" -mindepth 1 -maxdepth 1 -type d -regex '.*/[0-9]+$')
echo "Merging $SHARD_DIRS into $TARGET_SHARD"

mkdir -p ${TARGET_SHARD}.${JOB_ID}
pushd ${TARGET_SHARD}.${JOB_ID}
batch_dedupe ${OPTIONS[@]} -- $SHARD_DIRS
popd
test ! -d $TARGET_SHARD
mv ${TARGET_SHARD}.${JOB_ID} ${TARGET_SHARD}

